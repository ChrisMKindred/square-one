{#

Component: Card

Documentation: docs\theme\components\card.md

Controller: wp-content\plugins\core\src\Templates\Components\Card.php
PostCSS: wp-content\plugins\core\assets\theme\pcss\components\_card.pcss

Description: A common layout, the card is used in loops, query panels etc quite often. It may or may not have an image along with headlines, text and cta/meta

Attributes:
	{
		card_classes: 'c-card', // string. wrapper classes
		before_card: // string. an HTML string to output before the card content.
		image: '', // image html, probably composed with the image component
		card_header_classes: 'c-card__header', // string. the card header classes if an image is set
		card_content_classes: 'c-card__content', // string. the classes for the card content container
		pre_title: '' // string. an html string to output before the title
		title: '' // string. the title
		post_title: '' // string. an html string to output after the title
		text: '' // string. text/html string that is the body of the card
		button: '' // string. button html, probably composed using the button component
		after_card: // strng. an HTML string to output after the card content.
    }
 #}

<div {{ card_classes }}>

	{% if before_card %}
		{{ before_card }}
	{% endif %}

	{% if image %}
		<header {{ card_header_classes }}>
			{{ image }}
		</header>
	{% endif %}

	<div {{ card_content_classes }}>

		{% if pre_title %}
			{{ pre_title }}
		{% endif %}

		{% if title %}
			{{ title }}
		{% endif %}

		{% if post_title %}
			{{ post_title }}
		{% endif %}

		{% if text %}
			{{ text }}
		{% endif %}

		{% if button %}
			{{ button }}
		{% endif %}

	</div>

	{% if after_card %}
		{{ after_card }}
	{% endif %}

</div>
