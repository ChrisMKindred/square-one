<article class="item-loop item-loop--search item-loop--{{ post_type|esc_attr }}">

	<header class="item-loop__header">

		<h3 class="item-loop__title">
			<a href="{{ permalink|esc_url }}" rel="bookmark">
				{{ title }}
			</a>
		</h3>

	</header>

	{{ featured_image }}

	{{ excerpt }}

</article>

