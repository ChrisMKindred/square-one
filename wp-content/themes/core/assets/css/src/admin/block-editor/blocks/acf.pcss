/* -----------------------------------------------------------------------------
 *
 * ACF Blocks
 *
 * Styles applicable to "acf/" namespaced blocks.
 *
 * ----------------------------------------------------------------------------- */

/* -----------------------------------------------------------------------------
 * Global Styles applied to all ACF blocks.
 * ----------------------------------------------------------------------------- */

.wp-block[data-type^="acf/"] {
	max-width: none;
	width: 100%;

	/* Add a max-width to the edit UI for ACF blocks */
	.acf-block-fields {
		max-width: var(--grid-width);
		margin-left: auto;
		margin-right: auto;
	}
}

/* -----------------------------------------------------------------------------
 * Accordion Block
 *
 * Unset hidden accordion row properties for the editor.
 * ----------------------------------------------------------------------------- */

.wp-block[data-type^="acf/accordion"] {

	.c-accordion__content {
		display: block;
		max-height: none;
		overflow: visible;
	}
}

/* -----------------------------------------------------------------------------
 * Buttons Block
 *
 * Set a proper max width.
 * ----------------------------------------------------------------------------- */

.wp-block[data-type^="acf/buttons"] {
	/* -----------------------------------------------------------------------------
	 * Block Editor Kitchen Sink Grid Widths
	 * ----------------------------------------------------------------------------- */
	max-width: var(--grid-width-staggered-double);
	width: calc(100% - 2 * var(--grid-gutter-small));

	@media (--viewport-medium) {
		width: calc(100% - 2 * var(--grid-gutter));
	}
}

/* -----------------------------------------------------------------------------
 * Accordion Block
 *
 * Unset hidden tabpanel row properties for the editor & provide some separation
 * to each tabpanel while editing.
 * ----------------------------------------------------------------------------- */

.wp-block[data-type^="acf/tabs"] {

	.c-tabs__tabpanel {
		display: block;
		margin-bottom: var(--spacer-30);
		padding-bottom: var(--spacer-30);
		border-bottom: 1px solid var(--color-border);

		&:last-of-type {
			margin-bottom: 0;
			padding-bottom: 0;
			border-bottom: none;
		}
	}
}
