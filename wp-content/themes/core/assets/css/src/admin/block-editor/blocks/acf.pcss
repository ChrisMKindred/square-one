/* -----------------------------------------------------------------------------
 *
 * ACF Blocks
 *
 * Styles applicable to "acf/" namespaced blocks.
 *
 * ----------------------------------------------------------------------------- */

/* -----------------------------------------------------------------------------
 * Global Styles applied to all ACF blocks.
 * ----------------------------------------------------------------------------- */

.wp-block[data-type^="acf/"] {
	max-width: none;
	width: 100%;
	margin-top: var(--spacer-60);
	margin-bottom: var(--spacer-60);

	@media (--viewport-medium) {
		margin-top: var(--spacer-70);
		margin-bottom: var(--spacer-70);
	}
}
