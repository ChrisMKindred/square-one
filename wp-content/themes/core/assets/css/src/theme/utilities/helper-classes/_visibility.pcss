/* -----------------------------------------------------------------------------
 *
 * Hide from screenreaders & browsers
 *
 * ----------------------------------------------------------------------------- */

.a11y-hidden {
	@mixin hidden;
}

/* -----------------------------------------------------------------------------
 *
 * Hide from browsers & show for screenreaders
 *
 * ----------------------------------------------------------------------------- */

.screen-reader-text,
.a11y-visual-hide {
	@mixin visually-hide;
}

/* -----------------------------------------------------------------------------
 *
 * Show for browsers & screenreaders
 *
 * ----------------------------------------------------------------------------- */

.a11y-visual-show {
	@mixin visually-show;
}
