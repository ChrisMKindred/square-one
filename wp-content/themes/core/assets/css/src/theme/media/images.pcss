/* -----------------------------------------------------------------------------
 *
 * Media: Images
 *
 * ----------------------------------------------------------------------------- */

img {
	margin-left: auto;
	margin-right: auto;

	.t-sink & {
		line-height: 0;
		height: auto;
		display: block;
	}
}

/* -----------------------------------------------------------------------------
 * Media: Wrapper
 * ----------------------------------------------------------------------------- */

.wp-image {
	width: auto;
	margin: 0 auto;

	img {
		width: 100%;
	}
}

.wp-image--no-caption {

}

.wp-image--caption {

}

/* -----------------------------------------------------------------------------
 * Media: Image Captions
 * ----------------------------------------------------------------------------- */

.t-sink figcaption,
.wp-caption-text {
	@mixin t-caption;

	max-width: 100%;
	text-align: left;
	padding-top: var(--spacer-20);
	padding-bottom: var(--spacer-40);
	border-bottom: 1px solid var(--color-border);
}
