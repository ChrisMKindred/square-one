/* -----------------------------------------------------------------------------
 *
 * Typography: Lists
 *
 * ----------------------------------------------------------------------------- */

/* -------------------------------------------------------------------------
 * Global Lists
 * ------------------------------------------------------------------------- */

ul,
ol,
dl {

	.t-content & {
		@mixin t-body;

		margin-top: var(--spacer-40);
		margin-bottom: var(--spacer-40);
	}
}

li {

	& ~ li {

		.t-content & {
			margin-top: var(--spacer-20);
		}
	}
}

/* -------------------------------------------------------------------------
 * UL
 * ------------------------------------------------------------------------- */

.list-bullet,
.t-content ul {
	list-style: disc outside;
	padding-left: 1.5em;
	padding-right: 0;

	@media (--viewport-medium) {
		padding-left: 3em;
		padding-right: 3em;
	}
}

/* -------------------------------------------------------------------------
 * OL
 * ------------------------------------------------------------------------- */

.list-number,
.t-content ol {
	list-style: decimal outside;
	padding-left: 1.5em;
	padding-right: 0;

	@media (--viewport-medium) {
		padding-left: 3em;
		padding-right: 3em;
	}
}

/* -------------------------------------------------------------------------
 * DL
 * ------------------------------------------------------------------------- */

.dl,
.t-content dl {
	padding-left: 1.5em;
	padding-right: 0;

	@media (--viewport-medium) {
		padding-left: 3em;
		padding-right: 3em;
	}
}

.dt,
.t-content dt {
	font-weight: 700;
}

.dd,
.t-content dd {
	margin-bottom: var(--spacer-40);
}
