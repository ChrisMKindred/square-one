/* -----------------------------------------------------------------------------
 *
 * Typography: Quotes & Blockquote
 *
 * ----------------------------------------------------------------------------- */

/* -----------------------------------------------------------------------------
 * Quotes
 * ----------------------------------------------------------------------------- */

.quote,
.t-sink q {
	@mixin t-quote;
}

/* -----------------------------------------------------------------------------
 * Blockquotes
 * ----------------------------------------------------------------------------- */

.blockquote,
.t-sink blockquote {

	p {
		@mixin t-quote;
	}
}

/* -----------------------------------------------------------------------------
 * Cite
 * ----------------------------------------------------------------------------- */

.cite,
.t-sink cite {
	font-style: normal;
}
