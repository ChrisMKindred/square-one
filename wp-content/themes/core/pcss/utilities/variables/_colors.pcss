:root {
	/* -----------------------------------------------------------------------------
	 * Primary Palette
	 * ----------------------------------------------------------------------------- */

	--color-primary: #21a6cb;
	--color-secondary: darken(var(--color-primary), 0.08);

	/* -----------------------------------------------------------------------------
	 * Whites
	 * ----------------------------------------------------------------------------- */

	--color-white: #fff;

	/* -----------------------------------------------------------------------------
	 * Greys
	 * ----------------------------------------------------------------------------- */

	--color-grey-light: lighten(var(--color-grey), 0.15);
	--color-grey: grey;
	--color-grey-dark: darken(var(--color-grey), 0.15);

	/* -----------------------------------------------------------------------------
	 * Blacks
	 * ----------------------------------------------------------------------------- */

	--color-black: #000;

	/* -----------------------------------------------------------------------------
	 * Backgrounds
	 * ----------------------------------------------------------------------------- */

	--color-bgd: var(--color-white);
	--color-bgd-content: var(--color-white);
	--color-bgd-inputs: var(--color-white);
	--color-bgd-login: #f1f1f1;

	/* -----------------------------------------------------------------------------
	 * Links
	 * ----------------------------------------------------------------------------- */

	--color-link: var(--color-primary);
	--color-link-hover: var(--color-secondary);

	/* -----------------------------------------------------------------------------
	 * Text
	 * ----------------------------------------------------------------------------- */

	--color-text: var(--color-black);

	/* -----------------------------------------------------------------------------
	 * Borders
	 * ----------------------------------------------------------------------------- */

	--color-border: var(--color-grey);
	--color-border-input: var(--color-grey-light);
	--color-border-input-focus: var(--color-grey-light);

	/* -----------------------------------------------------------------------------
	 * Inputs
	 * ----------------------------------------------------------------------------- */

	--color-placeholder: var(--color-text);

	/* -----------------------------------------------------------------------------
	 * Validation
	 * ----------------------------------------------------------------------------- */

	--color-error: lighten(red, 0.1);
	--color-success: lighten(green, 0.1);
	--color-required: var(--color-error);

}
