:root {
	/* -----------------------------------------------------------------------------
	 * Primary Palette
	 * ----------------------------------------------------------------------------- */

	--primary: #21a6cb;
	--secondary: darken(var(--primary), 0.08);

	/* -----------------------------------------------------------------------------
	 * Whites
	 * ----------------------------------------------------------------------------- */

	--white: #fff;

	/* -----------------------------------------------------------------------------
	 * Greys
	 * ----------------------------------------------------------------------------- */

	--grey-light: lighten(var(--grey), 0.15);
	--grey: grey;
	--grey-dark: darken(var(--grey), 0.15);

	/* -----------------------------------------------------------------------------
	 * Blacks
	 * ----------------------------------------------------------------------------- */

	--black: #000;

	/* -----------------------------------------------------------------------------
	 * Backgrounds
	 * ----------------------------------------------------------------------------- */

	--bgd: var(--white);
	--bgd-content: var(--white);
	--bgd-login: #f1f1f1;

	/* -----------------------------------------------------------------------------
	 * Links
	 * ----------------------------------------------------------------------------- */

	--link: var(--primary);
	--link-hover: var(--secondary);

	/* -----------------------------------------------------------------------------
	 * Text
	 * ----------------------------------------------------------------------------- */

	--text: var(--black);

	/* -----------------------------------------------------------------------------
	 * Borders
	 * ----------------------------------------------------------------------------- */

	--border: var(--grey);

}
