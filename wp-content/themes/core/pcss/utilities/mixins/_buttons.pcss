
/* -----------------------------------------------------------------------------
 *
 * Global Button Resets
 *
 * ----------------------------------------------------------------------------- */

@define-mixin button-global {
	transition: var(--transition);
	width: auto;
	display: inline-block;
	line-height: var(--line-height-even);
	font-weight: var(--font-weight-bold);
	height: auto;
	cursor: pointer;
	text-decoration: none;
	border: 0;
	padding: 0;
}

/* -----------------------------------------------------------------------------
 *
 * Button Submit
 *
 * ----------------------------------------------------------------------------- */

@define-mixin button-submit {
	@mixin button-global;
	background-color: var(--black);
	padding: 1em;
	text-align: center;
	color: var(--white);
	&:visited {
		color: var(--white);
	}
	&:hover,
	&:focus,
	&:active {
		color: var(--white);
		background-color: var(--grey-dark);
	}
}
