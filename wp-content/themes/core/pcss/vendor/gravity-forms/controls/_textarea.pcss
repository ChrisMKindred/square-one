.gf-textarea {
	.ginput_container {
		position: relative;
	}
	textarea {
		padding-bottom: var(--gf-control-textarea-padding-bottom);
	}
}

/* Counter */
.ginput_counter {
	display: inline-block;
	background-color: var(--gf-control-textarea-counter-bgd-color);
	color: var(--gf-control-textarea-counter-color);
	font-size: var(--gf-control-textarea-counter-font-size);
	height: var(--gf-control-textarea-counter-height);
	line-height: var(--gf-control-textarea-counter-line-height);
	padding: 0 var(--gf-control-textarea-counter-padding-horizontal);
	position: absolute;
	left: var(--gf-control-textarea-counter-position-left);
	bottom: var(--gf-control-textarea-counter-position-bottom);
	border-bottom-left-radius: var(--gf-control-textarea-counter-border-bottom-radius);
}
