
/* -------------------------------------------------------------------------
 * Heading: H1
 * ------------------------------------------------------------------------- */

.h1,
.t-typography .h1,
.t-typography h1 {
	font-size: 36px;
}

h1,
.h1 {
	.t-typography & {
		margin-top: var(--spacer);
		margin-bottom: var(--spacer);
	}
}

