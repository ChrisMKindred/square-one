
/* -------------------------------------------------------------------------
 * Anchor: Defaults
 * ------------------------------------------------------------------------- */

a {
	transition: var(--transition);
	color: inherit;
	text-decoration: none;
	outline: 0;
	cursor: pointer;
	&:visited,
	&:hover {
		color: inherit;
	}
	&:active,
	&:focus {
		outline: 1px dotted;
		color: inherit;
	}
}

/* -------------------------------------------------------------------------
 * Anchor: Full
 * ------------------------------------------------------------------------- */

.anchor,
.context-content a {
	color: var(--link);
	text-decoration: underline;
	&:hover,
	&:focus {
		color: var(--link-hover);
	}
}