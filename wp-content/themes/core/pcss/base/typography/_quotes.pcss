
/* -----------------------------------------------------------------------------
 * Global Quotes & Blockquotes
 * ----------------------------------------------------------------------------- */

.blockquote,
blockquote,
.quote,
q {
	.t-typography & {
		margin: var(--spacer) auto;
	}
}

/* -----------------------------------------------------------------------------
 * Quotes
 * ----------------------------------------------------------------------------- */

/* q */
.quote,
.t-typography q {
	@mixin quote-base;
	@mixin quote-text;
	display: block;
}

/* -----------------------------------------------------------------------------
 * Blockquotes
 * ----------------------------------------------------------------------------- */

/* blockquote */
.blockquote,
.t-typography blockquote {
	@mixin quote-base;
	p {
		@mixin quote-text;
		margin: 0 auto;

		& ~ p {
			margin-top: var(--spacer);
		}
	}
}

/* -----------------------------------------------------------------------------
 * Cite
 * ----------------------------------------------------------------------------- */

/* cite */
.cite,
.t-typography cite {
	font-style: normal;
	display: block;
}
