.skip-link {

	&:focus {
        display: flex;
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		width: 100%;
		height: 50px;
        align-items: center;
        justify-content: center;
		z-index: 100000;
		padding: 0 var(--grid-gutter);
		border: 0;
		margin: 0;
		font-size: 18px;
		clip: inherit;
		background-color: var(--color-white);
		color: var(--color-black);
	}
}