/* -----------------------------------------------------------------------------
 *
 * Component: Quote
 *
 * ----------------------------------------------------------------------------- */

.c-quote {
	text-align: center;
}

.c-quote__text {
	font-size: 38px;
	font-weight: var(--font-weight-bold);
	line-height: 1.3;
}

.c-quote__cite {
	display: block;
	font-size: 18px;
	font-weight: var(--font-weight-semibold);
	font-style: normal;
	margin-top: var(--spacer);
}
