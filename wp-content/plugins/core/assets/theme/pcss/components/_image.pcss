/* -----------------------------------------------------------------------------
 *
 * Component: Image
 *
 * ----------------------------------------------------------------------------- */

.c-image {
	width: 100%;
}

/* -----------------------------------------------------------------------------
 * Component Image: Add padding bottom 100% to expand bg image container.
 * ----------------------------------------------------------------------------- */

.c-image--padding-bottom-full {
	padding-bottom: 100%;
}

.c-image__bg {
	background: center center no-repeat;
	background-size: cover;
	bottom: 0;
	height: 100%;
	left: 0;
	position: absolute;
	right: 0;
	top: 0;
	width: 100%;
}
