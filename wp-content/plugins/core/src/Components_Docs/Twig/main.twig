<!DOCTYPE html>
<html {{ language_attributes }}>
<head>

    {# // TITLE: Handled by WP #}

    {# // MISC Meta #}
    <meta charset="utf-8">
    <meta name="author" content="{{ bloginfo( 'name' ) }}">
    <link rel="pingback" href="{{ bloginfo( 'pingback_url' ) }}">

    {# // MOBILE META #}
    <meta name="HandheldFriendly" content="True">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# // PLATFORM META: iOS & Android #}
    <meta name="apple-mobile-web-app-title" content="{{ page_title|esc_attr }}">

    {# // PLATFORM META: IE #}
    <meta name="application-name" content="{{ bloginfo( 'name' ) }}">

    {{ do_action( 'wp_head' ) }}

</head>
<body class="{{ body_class }}">

<div class="l-wrapper components-docs" data-js="site-wrap">
    <main>
        <header class="components-docs-header">
            <ul class="components-docs-nav">
                {% for group, items in nav_items %}
                    <li class="components-docs-nav__group">
                        {{ group }}
                        <ul class="components-docs-nav__items">
                            {% for item in items %}
                                <li class="components-docs-nav__item">
                                    <a class="component-docs-nav__link" href="{{ item.url }}">{{ item.label }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                {% endfor %}
            </ul>
        </header>
        <div class="l-container">
            <div class="components-docs-item">
                {{ item }}
            </div>
        </div>
    </main>

</div><!-- .l-wrapper -->

{{ do_action( 'wp_footer' ) }}

</body>
</html>
